@model RoleViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<br />
<br />

<form asp-action="Edit" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="alert-danger"></div>

    <partial name="RolePartialViews/EditCreateRolePartialView" model="Model"></partial>

    <a asp-action="AddOrRemoveUser" asp-route-roleId ="@Model.Id" class="btn btn-success">Add Or Remove User</a>

    <input type="submit" value="Save" class="btn btn-primary" />

    <a asp-action="Index" class="btn btn-light">Back To List</a>

</form>

