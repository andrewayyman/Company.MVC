@model Department

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<br />
<br />

<form asp-action="Edit">

    <div asp-validation-summary="All" class="alert-danger" ></div>

    <partial name="PartialViews/EditCreateDepartmentsPartialView" model="@Model"></partial>


    <br />
    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-controller="Department" asp-action="Index" class="btn btn-light">Back To List</a>

</form>




@section ClientSideValidation {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"> </script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
