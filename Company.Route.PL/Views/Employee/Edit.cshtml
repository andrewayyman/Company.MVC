@model EmployeeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<br />
<br />

<form asp-action="Edit" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="alert-danger"></div>

    <partial name="PartialViews/EditCreatePartialView" model="Model"></partial> @* instead of the redundant code *@
    <input hidden asp-for="ImageName" />

    <br />
    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Back To List</a>

</form>


@section ClientSideValidation {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"> </script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
