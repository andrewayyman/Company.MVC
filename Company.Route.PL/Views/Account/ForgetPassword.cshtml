@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="ForgetPassword">
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input type="submit" value="SendEmail">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp"> Register Now!</a></p>
	</div>
</div>


@section ClientSideValidation {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"> </script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}

